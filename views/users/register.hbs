{{>user_messages}}
<form method="post" action="/users/register">
    <div style="margin: auto; width: 300px">
        <div class="form-group row">
            <input class="form-control" type="text" name="username" placeholder="Username" required>
        </div>
        <div class="form-group row">
            <input class="form-control" type="password" name="password" placeholder="Password" required>
        </div>
        <div class="form-group row">
            <div class="form-check-inline m-auto">
                <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin" value="true">
                <label class="form-check-label" for="isAdmin">Administrator?</label>
            </div>
            <input class="btn btn-primary m-auto" type="submit">
        </div>
    </div>
</form>